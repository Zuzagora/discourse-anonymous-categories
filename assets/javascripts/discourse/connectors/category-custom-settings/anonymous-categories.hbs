<h3>{{i18n "anonymous_categories.title"}}</h3>
<section class="field">
  <div class="anonymous-categories">
    <label class="checkbox-label">
      <Input
        @type="checkbox"
        @checked={{readonly this.category.force_anonymous_posting}}
        {{on "change" (action "onChangeSetting" value="target.checked")}}
      />
      {{i18n "anonymous_categories.force_anonymous_posting"}}
    </label>
  </div>
</section>
